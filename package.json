{
  "name": "open-alice",
  "version": "1.0.0",
  "description": "File-based trading agent engine",
  "type": "module",
  "scripts": {
    "dev": "tsx src/main.ts",
    "dev:ui": "cd ui && pnpm dev",
    "build": "pnpm build:ui && pnpm build:backend",
    "build:ui": "cd ui && pnpm install && pnpm build",
    "build:backend": "tsup src/main.ts --format esm --dts",
    "env:verify": "node --import tsx scripts/python_fallback.ts scripts/verify_environment_lock.py",
    "governance:seed-config": "node --import tsx scripts/python_fallback.ts scripts/seed_governance_config.py",
    "governance:clean-artifacts": "node --import tsx scripts/python_fallback.ts scripts/clean_governance_artifacts.py",
    "evidence:build": "node --import tsx scripts/python_fallback.ts scripts/build_decision_packet.py",
    "evidence:validate": "node --import tsx scripts/python_fallback.ts scripts/validate_decision_packet.py",
    "evidence:idempotency": "node --import tsx scripts/python_fallback.ts scripts/tests/test_decision_packet_idempotency.py",
    "runtime:replay-state": "node --import tsx scripts/python_fallback.ts scripts/replay_runtime_state.py",
    "freeze:verify": "node --import tsx scripts/python_fallback.ts scripts/verify_freeze_manifest.py",
    "gate:run": "node --import tsx scripts/python_fallback.ts scripts/gate_runner.py",
    "gate:run-all": "pnpm gate:run",
    "gate:migrate-v4-v5": "node --import tsx scripts/python_fallback.ts scripts/migrate_v4_to_v5.py",
    "gate:migration-compare": "node --import tsx scripts/python_fallback.ts scripts/migration_compare.py",
    "gate:chaos": "node --import tsx scripts/python_fallback.ts scripts/chaos_gate_runner.py",
    "sync:post-pull": "node --import tsx scripts/python_fallback.ts scripts/post_pull_sync.py",
    "sync:install-hooks": "bash scripts/install_post_pull_hooks.sh",
    "sync:remove-hooks": "bash scripts/remove_post_pull_hooks.sh",
    "takeover:verify": "bash scripts/verify_takeover_ready.sh",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "trading",
    "ai-agent",
    "crypto",
    "securities",
    "file-driven"
  ],
  "author": "Open Alice Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TraderAlice/OpenAlice.git"
  },
  "homepage": "https://traderalice.com",
  "packageManager": "pnpm@10.29.2",
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.44",
    "@ai-sdk/google": "^3.0.30",
    "@ai-sdk/openai": "^3.0.30",
    "@alpacahq/alpaca-trade-api": "^3.1.3",
    "@grammyjs/auto-retry": "^2.0.2",
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sinclair/typebox": "0.34.48",
    "ai": "^6.0.86",
    "ajv": "^8.18.0",
    "ccxt": "^4.5.38",
    "chalk": "^5.6.2",
    "decimal.js": "^10.6.0",
    "express": "^5.2.1",
    "file-type": "^21.3.0",
    "grammy": "^1.40.0",
    "hono": "^4.11.9",
    "json5": "^2.2.3",
    "pino": "^10.3.1",
    "playwright-core": "1.58.2",
    "sharp": "^0.34.5",
    "tslog": "^4.10.2",
    "undici": "^7.22.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@ai-sdk/provider": "^3.0.8",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
